<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardsActivity">

    <ScrollView
        android:layout_width="411dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/pale_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pale_grey"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guiline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.75" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/background_top_card"
                    app:layout_constraintBottom_toBottomOf="@id/guiline"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="14.7dp"
                    android:paddingTop="25dp"
                    android:paddingRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_group_6" />

                    <TextView
                        style="@style/TextStyle18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3.3dp"
                        android:text="Cuentas bancarias y tarjetas " />

                    <TextView
                        style="@style/TextStyle29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:paddingLeft="3.3dp"
                        android:text="Mantenemos tus datos financieros protegidos para que nadie vea la informaciÃ³n confidencial." />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:paddingLeft="3.3dp"
                        android:src="@mipmap/group" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="18dp"
                android:paddingTop="30dp">

                <TextView
                    style="@style/TextStyle30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Mis tarjetas" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white_three"
                    android:orientation="horizontal"
                    android:paddingLeft="21dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="15dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/mastercard_2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="31dp"
                        android:orientation="vertical"
                        android:paddingVertical="15dp">

                        <TextView
                            style="@style/TextStyle23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mastercard" />

                        <TextView
                            style="@style/TextStyle24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="****9889" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/background_remove"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/background_delete"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/background_repair"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="8dp"
                                        android:src="@drawable/ic_create_black_18_dp_2" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="9dp"
                                    android:src="@drawable/ic_delete_outline_black_18_dp" />
                            </LinearLayout>
                            '

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="9dp"
                                android:src="@drawable/ic_path" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white_three"
                    android:orientation="horizontal"
                    android:paddingLeft="21dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="15dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/combined_shape" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="31dp"
                        android:orientation="vertical"
                        android:paddingVertical="15dp">

                        <TextView
                            style="@style/TextStyle23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visa black" />

                        <TextView
                            style="@style/TextStyle24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="****8764" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="11dp"
                            android:foregroundGravity="center"
                            android:src="@drawable/ic_more_vert_black_18_dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/white_three"
                    android:orientation="horizontal"
                    android:paddingLeft="21dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="15dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/combined_shape" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="31dp"
                        android:orientation="vertical"
                        android:paddingVertical="15dp">

                        <TextView
                            style="@style/TextStyle23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visa black" />

                        <TextView
                            style="@style/TextStyle24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="****8764" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="11dp"
                            android:foregroundGravity="center"
                            android:src="@drawable/ic_more_vert_black_18_dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="15dp"
        android:backgroundTint="@color/cerulean_blue"
        android:src="@drawable/ic_add_black_18_dp"
        app:tint="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>